<div class='form'><h1>Add to Watchlist</h1><br>
    <%= form_for @watchlist do |f| %>
        <%= f.hidden_field :security_id, value: @sec_id %>
        <p><%= f.label "Create a new Watchlist:" %></p>
        <p><%= f.label :name %></p>
        <%= f.text_field :name %>
        <p><%= f.label :description %></p>
        <%= f.text_area :description %><br><br>
        

        <p><%= f.label "Or choose existing Watchlist to add Security:" %></p>
        <% current_user.watchlists.map{|wl| wl.name}.uniq.each do |name| %>
            <p><%= f.radio_button :name, name %><%= f.label :name, name %></p>
        <% end %>
        <br>
        <%= f.submit class: 'submit-btn' %>
    <% end %>
</div>